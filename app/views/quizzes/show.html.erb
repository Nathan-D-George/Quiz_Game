
<div class="card text-center" style='background-color:black; border-color: rgb(83, 83, 83); border-width: 5px;'>
  <div class="card-header" style='background-color: rgb(83, 83, 83)'>
    <h4> <%= @quiz.name %> </h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">Mode: <%= @quiz.difficulty %> </h5>
    <div class='row' style='margin-top:70px'>
      <div class='col-6'> 
        <%= link_to 'Edit', edit_quiz_path(id: @quiz.id), class:'btn btn-warning col-6' %>
      </div>
      <div class='col-6'>
        <%= link_to 'Delete', destroy_quiz_path(id: @quiz.id), class:'btn col-6', data:{turbo_method: :delete, turbo_confirm: 'Delete Quiz?'}, style:'background-color:red; color:white' %>
      </div>
  </div>
  <div class="card-footer text-muted mt-4" style='background-color: rgb(83, 83, 83);'>
    <%= link_to "PLAY", '#', class:'btn col-4', style:'background-color: #09ee23; color: darkblue' %>
  </div>
</div>
